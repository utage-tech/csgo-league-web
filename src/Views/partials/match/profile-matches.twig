<a href="/match/{{ match.match_id }}">
    <div class="card container" data-bs-hover-animate="pulse" style="border:none;">
        <img class="card-img w-100 d-block matches-img" style="background-image:url(&quot;{{ match.map_image }}&quot;);height:130px;">
        <div class="card-img-overlay text-center row" style="color:rgb(255,255,255);">
            <h1 class="text-white col-md-6">
                <i class="fas fa-crosshairs"></i> {{ match.kills }}
            </h1>
            <h1 class="text-white col-md-6">
                <i class="fas fa-skull"></i> {{ match.deaths }}
            </h1>
        </div>
    </div>
</a>