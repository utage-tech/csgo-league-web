                                        height:25px;">
                                        {{ t.name }}
                                    </th>
                                </tr>
                                <tr>
                                    <th colspan="2" style="width:232px;">
                                        Player
                                    </th>
                                    <th>
                                        Kills
                                    </th>
                                    <th>
                                        Assists
                                    </th>
                                    <th>
                                        Deaths
                                    </th>
                                    <th>
                                        KDR
                                    </th>
                                    <th>
                                        MVPs
                                    </th>
                                    <th>
                                        Score
                                    </th>
                                    <th>
                                        Ping
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for player in t.players %}
                                    <tr id="{{ player.steamid64 }}" class="steam-profile">
                                        <td style="width:32px;">
                                            <a href="/profile/{{ player.steamid64 }}">
                                                <img class="rounded-circle steam-profile-avatarIcon">
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/profile/{{ player.steamid64 }}" class="text-white steam-profile-name" target="_blank">
                                                Loading...
                                            </a>
                                        </td>
                                        <td>
                                            {{ player.kills }}
                                        </td>
                                        <td>
                                            {{ player.assists }}
                                        </td>
                                        <td>
                                            {{ player.deaths }}
                                        </td>
                                        <td>
                                            {{ player.kdr|number_format(2, '.', ',') }}
                                        </td>
                                        <td>
                                            {{ player.mvps }}
                                        </td>
                                        <td>
                                            {{ player.score }}
                                        </td>
                                        <td>
                                            {{ player.ping }}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}